{
  "root": true,
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["prettier"],
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "eqeqeq": ["warn"],
    "no-const-assign": ["error"],
    "no-empty": ["error"],
    "no-use-before-define": ["off"],
    "no-console": ["off"],
    "no-unused-vars": ["off"],
    "no-case-declarations": ["off"]
  },
  "env": {
    "node": true,
    "browser": true
  }
}
